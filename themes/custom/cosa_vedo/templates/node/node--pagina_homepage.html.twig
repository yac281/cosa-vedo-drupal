    <div class="row">
      <div class="col-lg-9 col-md-12 col-sm-12 col-xs-12">
        <div class="page-wrapper">
          <div class="blog-top clearfix">
            <h4 class="pull-left">Articoli recenti <a href="#"><i class="fa fa-rss"></i></a></h4>
          </div><!-- end blog-top -->

          <div class="blog-list clearfix">
            <!-- lista articoli -->
            {% set list_items = drupal_view_result('home_lista_articoli','default') %}

            {% for item in list_items %}
