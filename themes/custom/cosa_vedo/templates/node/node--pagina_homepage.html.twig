<section class="section first-section">
  <div class="container-fluid">
    <div class="masonry-blog clearfix">
      <!-- Visore banner -->
      {% set banner_items = drupal_view_result('home_banner_articoli','default') %}
      {% for item in banner_items %}
        {% set media_entity = item._entity.field_immagine_copertina.entity %}
        {% set file_entity = media_entity.field_media_image.entity %}
        {% set file_uri = file_entity.fileuri %}

        {% if banner_items|length == 1 %}
          <div>
            <div class="masonry-box post-media">
              <img style="object-fit:cover; height: 449px;" src="{{ file_uri|image_style('cover') }}" alt="" class="img-fluid">
              <div class="shadoweffect">
                <div class="shadow-desc">
                  <div class="blog-meta">
                    <span class="bg-orange"><a href="/articoli" title="">Recensione</a></span>
                    <h4><a href="{{ path('entity.node.canonical', {'node': item._entity.id()}) }}" title="">{{ item._entity.title.value }}</a></h4>
                    <small><a title="">{{ item._entity.field_data_di_uscita.value|date("d-m-Y") }}</a></small>
                    <small><a title="">scritto da {{ item._entity.uid.entity.name.value }}</a></small>
                  </div><!-- end meta -->
                </div><!-- end shadow-desc -->
              </div><!-- end shadow -->
            </div><!-- end post-media -->
          </div><!-- end first-side -->
        {% elseif loop.first %}
          <div class="first-slot">
            <div class="masonry-box post-media">
              <img style="object-fit:cover; height: 449px;" src="{{ file_uri|image_style('cover') }}" alt="" class="img-fluid">
              <div class="shadoweffect">
                <div class="shadow-desc">
                  <div class="blog-meta">
                    <span class="bg-orange"><a href="/articoli" title="">Recensione</a></span>
                    <h4><a href="{{ path('entity.node.canonical', {'node': item._entity.id()}) }}" title="{{ item._entity.title.value }}">{{ item._entity.title.value }}</a></h4>
                    <small><a title="">{{ item._entity.field_data_di_uscita.value|date("d-m-Y") }}</a></small>
                    <small><a title="">scritto da {{ item._entity.uid.entity.name.value }}</a></small>
                  </div><!-- end meta -->
                </div><!-- end shadow-desc -->
              </div><!-- end shadow -->
            </div><!-- end post-media -->
          </div><!-- end first-slot -->
        {% else %}
          <div class="second-slot">
            <div class="masonry-box post-media">
              <img style="object-fit:cover; height: 449px;" src="{{ file_uri|image_style('cover') }}" alt="" class="img-fluid">
              <div class="shadoweffect">
                <div class="shadow-desc">
                  <div class="blog-meta">
                    <span class="bg-orange"><a href="/articoli" title="">Recensione</a></span>
                    <h4><a href="{{ path('entity.node.canonical', {'node': item._entity.id()}) }}" title="{{ item._entity.title.value }}">{{ item._entity.title.value }}</a></h4>
                    <small><a title="">{{ item._entity.field_data_di_uscita.value|date("d-m-Y") }}</a></small>
                    <small><a title="">scritto da {{ item._entity.uid.entity.name.value }}</a></small>
                  </div><!-- end meta -->
                </div><!-- end shadow-desc -->
              </div><!-- end shadow -->
            </div><!-- end post-media -->
          </div><!-- end second-slot -->
        {% endif %}
      {% endfor %}



    </div><!-- end masonry -->
    </div>
</section>



<section class="section">
